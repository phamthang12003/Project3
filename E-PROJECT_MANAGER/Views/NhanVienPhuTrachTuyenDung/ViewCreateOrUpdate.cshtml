@model NhanVienPhuTrachTuyenDung
@{
    var nvpttd = ViewBag.ViTriTuyenDungId as SelectList;
    var lsuser = ViewBag.ListUser as SelectList;

}

<!-- Model Create Or Update -->
<div class="modal fade bd-example-modal-lg" id="create-or-update-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Nhân Viên Phụ Trách Tuyển Dụng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div>
                    <div class="form-group row mb-2">
                        <label for="ten-san-pham" class="col-sm-4 col-form-label">Tên nhân viên</label>
                        <div class="col-sm-10">
                            <select asp-for="NhanVienId" class="form-control" asp-items="lsuser"></select>
                            @*<input type="text" class="form-control" id="nhan-vien-id" placeholder="" value="@Model.NhanVienId">*@
                        </div>
                    </div>

                    @*<div class="form-group row mb-1">
                        <label for="thong-so-ky-thuat" class="col-sm-2 col-form-label">Vị Trí Tuyển Dụng Id</label>
                        <div class="col-sm-10">
                            <textarea type="text" class="form-control" id="vi-tri-tuyen-dung--id">@Model.ViTriTuyenDungId</textarea>
                        </div>
                    </div>*@
                    
                    <div class="form-group row mb-2">
                        <label for="ViTriTuyenDungId" class="col-sm-4 col-form-label">Tên Vị Trí Tuyển Dụng</label>
                        <select asp-for="ViTriTuyenDungId" class="form-control" asp-items="nvpttd"></select>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btn-save-san-pham" sp-id="@(Model.Id)">Thêm </button>
            </div>
        </div>
    </div>
</div>


