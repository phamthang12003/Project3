@model HoSo

<!-- Model Create Or Update -->
<div class="modal fade bd-example-modal-lg" id="create-or-update-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ho So</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="form-group row mb-1">
                        <label for="ten-san-pham" class="col-sm-2 col-form-label">Ung vien Id</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="ung-vien-id" placeholder="Ung vien id" value="@Model.UngVienId">
                        </div>
                    </div>

                    <div class="form-group row mb-1">
                        <label for="mo-ta-san-pham" class="col-sm-2 col-form-label">Loai Ho So</label>
                        <div class="col-sm-10">
                            <textarea type="text" class="form-control" id="loai-ho-so">@Model.LoaiHoSo</textarea>
                        </div>
                    </div>

                    <div class="form-group row mb-1">
                        <label for="thong-so-ky-thuat" class="col-sm-2 col-form-label">Link ho so</label>
                        <div class="col-sm-10">
                            <textarea type="text" class="form-control" id="link-ho-so">@Model.LinkHoSo</textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btn-save-san-pham" sp-id="@Model.Id">Thêm </button>
            </div>
        </div>
    </div>
</div>
