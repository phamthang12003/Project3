@model PhongBan

<!-- Model Create Or Update -->
<div class="modal fade bd-example-modal-lg" id="create-or-update-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Phòng Ban</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="form-group row mb-1">
                        <label for="ten-san-pham" class="col-sm-2 col-form-label">Phòng Ban</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="ten-phong-ban" placeholder="Ten phòng ban" value="@Model.TenPhongBan">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btn-save-san-pham" sp-id="@Model.Id">Thêm </button>
            </div>
        </div>
    </div>
</div>

