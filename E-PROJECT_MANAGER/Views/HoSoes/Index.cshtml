@model IEnumerable<E_PROJECT_MANAGER.Models.HoSo>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Hồ sơ ứng viên</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.LoaiId)*@
                            STT
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.UngVienId)*@
                            Ứng Viên
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LoaiHoSo)*@
                            Loại Hồ Sơ
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.LinkHoSo)*@
                            Link Hồ Sơ
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.TrangThaiId)*@
                            Trạng Thái
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDelete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayXoa)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UngVienId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiHoSo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinkHoSo)
            </td>
            <td>
               @* @Html.DisplayFor(modelItem => item.TrangThaiId)*@
                    @if (item.TrangThaiId == 1)
                    {
                        <span>Đang tìm</span>
                    }
                    else if (item.TrangThaiId == 2)
                    {
                        <span>Đang phỏng vấn</span>
                    }
                    else if (item.TrangThaiId == 3)
                    {
                        <span>Đang thử việc</span>
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDelete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayXoa)
            </td>
            <td>
                    <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |*@
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
